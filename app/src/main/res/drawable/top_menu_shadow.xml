<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bottom Shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/darker_gray" /> <!-- Shadow color -->
            <corners android:radius="2dp" /> <!-- Shadow corner radius -->
        </shape>
    </item>

    <!-- Background Color -->
    <item android:top="2dp"> <!-- Adjust the top attribute to control the shadow offset -->
        <shape android:shape="rectangle">
            <solid android:color="@color/letterBlack" /> <!-- Background color -->
            <corners android:radius="2dp" /> <!-- Background corner radius (should match the shadow) -->
        </shape>
    </item>

</layer-list>
