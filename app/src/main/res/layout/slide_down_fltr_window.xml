<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blueblack"
    android:id="@+id/slidingID">


    <CheckBox
        android:id="@+id/checkBox3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CheckBox"
        app:layout_constraintEnd_toStartOf="@+id/tvFltrChest"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/checkBox4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="CheckBox"
        app:layout_constraintEnd_toStartOf="@+id/tvFltrLegs"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvFltrArms"
        android:layout_width="68dp"
        android:layout_height="35dp"
        android:layout_marginTop="28dp"
        android:text="Arms"
        android:textColor="@color/skincolor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvFltrBack" />

    <TextView
        android:id="@+id/tvFltrLegs"
        android:layout_width="68dp"
        android:layout_height="35dp"
        android:layout_marginTop="28dp"
        android:text="Legs"
        android:textColor="@color/skincolor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvFltrChest" />

    <TextView
        android:id="@+id/tvFltrChest"
        android:layout_width="68dp"
        android:layout_height="35dp"
        android:text="Chest"
        android:textColor="@color/skincolor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvFltrBack"
        android:layout_width="68dp"
        android:layout_height="35dp"
        android:text="Back"
        android:textColor="@color/skincolor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:textColor="@color/skincolor"
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CheckBox"
        app:layout_constraintStart_toEndOf="@+id/tvFltrBack"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="CheckBox"
        app:layout_constraintStart_toEndOf="@+id/tvFltrArms"
        app:layout_constraintTop_toBottomOf="@+id/checkBox" />

</androidx.constraintlayout.widget.ConstraintLayout>